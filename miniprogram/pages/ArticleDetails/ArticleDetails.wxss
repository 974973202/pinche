/* miniprogram/pages/ArticleDetails/ArticleDetails.wxss */
.content{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background-color: #fff;
}
.title{
  font-size: 34rpx;
  font-weight: bold;
  display: flex;
  flex: 1;
  justify-content: center;
}
.title text{
  flex: 1;
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #f6f6f6;
}
.user-info{
  display: flex;
  align-content: center;
  margin: 30rpx 0;
}
.head-img{
  width: 90rpx;
  height: 90rpx;
}
.head-img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.info{
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 15rpx;
}
.name-time{
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: space-between;
}
.name-time .name{
  font-size: 26rpx;
}
.name-time .time{
  font-size: 22rpx;
  color: #656565;
}
.address{
  font-size: 22rpx;
  display: flex;
  align-items: center;
}
.address image{
  width: 24rpx;
  height: 24rpx;
}
.address .text{
  margin-left: 10rpx;
  display: flex;
  align-items: center;
  color: #656565;
}
.address .text:after{
  content: '';
  display: block;
  width: 10rpx;
  height: 10rpx;
  margin-left: 10rpx;
  border-top: 1px solid #656565;
  border-right: 1px solid #656565;
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg)
}
.cont{
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  margin-top: 40rpx;
  padding:0 10rpx;
}
.img{
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.img image{
  max-width: 100%;
  width: 100%;
  height: 10;
}
.more-artical{
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn-group{
  position: fixed;
  right: 20rpx;
  bottom: 60rpx;
  width: 90rpx;
}
.btn-group button{
  padding: 0;
}
.blod{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: rgba(193, 201, 211, 0.6);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
.blod .img{
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
  border-radius: 50%;
  text-align: center;
  line-height: 50rpx;
}
.blod .img image{
  width: 50rpx;
  height: 50rpx;
}
.blod .text{
  text-align: center;
  font-size: 20rpx;
  color: #0091ff;
}
.blod.eye{
  background: rgba(245, 246, 248, 0.6);
}
.blod.eye .text{
  text-align: center;
  font-size: 20rpx;
  color: #333;
}