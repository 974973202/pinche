.my-subscribe{
  /* padding: 140rpx 0; */
  height: 100%;
}
.sub-view{
  width: 100%;
  height: 100%;
  /* padding: 120rpx 0 30rpx 0; */
}
.sub{
  display: flex;
  flex-direction: column;
  margin: 0 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 4rpx #ccc;
}
.sub:last-child{
   margin-bottom: 0;
}
.sub>view{
  display: flex;
  justify-content: space-between;
}
.sub .text-group{
  flex: 1;
}
.sub_driction .img{
  width: 50rpx;
  height: 30rpx;
}
.sub .sub-btn-group{
  width: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: end;
}
.sub .sub-btn-group .btn{
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  color: #CC0000;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  border: 1rpx solid #CC0000;
}
.sub .sub-btn-group .publish{
  color: #0091ff;
  border: 1rpx solid #0091ff;
}
.sub .text-sub{
  display: flex;
  flex: 1;
  margin-bottom: 15rpx;
}
.sub .label{
  font-size: 28rpx;
  color: #535353;
  width: 150rpx;
}
.sub .cont{
  flex: 1;
  display: flex;
  font-size: 28rpx;
  color: #1a1a1a;
}
.sub .address-view{
  display: flex;
  flex: 1;
}
.sub .address-view .label{
   width: 90rpx;
}
.sub .address-view .text{
  display: flex;
  width: 220rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 24rpx;
}
.sub .address-view:last-child .text{
  margin-right: 0rpx;
}
.cont.trips .add-btn{
  width: 120rpx;
  height: 40rpx;
  display: flex;
  align-content: center;
  justify-content: center;
  border: 1px solid #0091ff;
  border-radius: 15rpx;
  font-size: 24rpx;
  color: #9B9B9B;
}
.sub-view{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 100rpx;
}