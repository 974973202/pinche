/* miniprogram/pages/ExpressNews/ExpressNews.wxss */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.header {
  display: flex;
  align-items: center;
  top: 0;
  position: fixed;
  width: 100%;
  background-color: #0091ff;
  z-index: 99999;
}

.header .title {
  margin: 0  20rpx;
  display: flex;
  flex: 1;
  height: 30px;
  margin-right: 120px;
  align-items: center;
  padding: 0 50rpx 0 20rpx;
  border-radius: 27px;
  background: hsla(0, 0%, 100%, .6);
}
.header .title image{
  width: 20px;
  height: 20px;
}
.header .title text{
  font-size: 14px;
  color: #fff;
  margin-left: 0rpx;
}
.content{
  display: flex;
  flex-direction: column;
}
.data-list{
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
}
.data-list .item{
  padding: 20rpx 0;
  background-color: #fff;
  margin-bottom: 15rpx;
}
.top-view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}
.user-info{
  display: flex;
  align-items: center;
}
.user-info .avatar{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #ccc;
}
.user-info .avatar image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user-info .name{
  font-size: 25rpx;
  font-weight: bold;
  margin: 0 20rpx;
}
.top-view .time{
  font-size: 24rpx;
  color: #333;
}
.cont-view{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 20rpx 0;
}
.cont-view .title{
  flex: 1;
  font-size: 30rpx;
  line-height: 45rpx;
  padding: 0 20rpx;
}
.cont-view .img-list{
  display: flex;
  flex-direction: row;
  flex-flow: wrap;
  margin-top: 10rpx;
  padding: 0 10rpx;
}
.cont-view .img-list .img-view{
  width: 230rpx;
  height: 200rpx;
  background: #ccc;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
}
.cont-view .img-list .img-view image{
  width: 100%;
  height: 100%;
}
.cont-view.one{
  flex-direction:row;
}
.cont-view.one .img-list{
  width: 150rpx;
  margin-top: 0;
  margin-right: 20rpx;
}
.cont-view.one .img-list .img-view{
  width: 180rpx;
  height: 130rpx;
  margin-bottom: 0;
}
.bottom-view{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}
.address{
  font-size: 22rpx;
  display: flex;
  flex: 1;
  height: 50rpx;
  overflow: hidden;
  align-items: center;
  padding-right: 10rpx;
}
.address image{
  width: 25rpx;
  height: 24rpx;
}
.address .text{
  margin-left: 10rpx;
  display: flex;
  align-items: center;
  color: #656565;
  overflow: hidden;
  white-space: nowrap;/*不换行*/
}
.address:after{
  content: '';
  display: block;
  width: 12rpx;
  height: 12rpx;
  border-top: 1px solid #656565;
  border-right: 1px solid #656565;
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg)
}
.btn-group{
  width: 300rpx;
  display: flex;
  justify-content: flex-end;
}
.btn-group button{
  padding: 0;
}
.blod{
  width: 90rpx;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-left: 40rpx;
}
.blod .img{
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
  border-radius: 50%;
  display: flex;
  align-items: center;
}
.blod .img image{
  width: 40rpx;
  height: 40rpx;
}
.blod .text{
  text-align: center;
  font-size: 20rpx;
  color: #333;
  margin-left: -10rpx;
}
.null-view{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0rpx;
}