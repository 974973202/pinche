page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.user-info-view{
  width: 100%;
  height: 400rpx;
  background-position: top center;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  display: flex;
}
.top-view{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.top-toll{
  padding: 20rpx 30rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
}
.user-info{
  height: 100rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.user-info .img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.user-info .name{
  font-size: 30rpx;
  line-height: 80rpx;
  font-weight: bold;
  color: #656565;
}

.setting-btn{
  width: 60rpx;
  height: 60rpx;
  background-size: cover;
}

.group-list{
  width: 100%;
  margin-top: 50rpx;
}
.list{
  position: relative;
  width: 100%;
  height: 90rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color:  #ffffff;
}
.list:after{
    content: '';
    display: block;
    width: 20rpx;
    height: 20rpx;
    margin-right: 30rpx;
    border-top: 1px solid #656565;
    border-right: 1px solid #656565;
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg)
}
.button{
  flex: 1;
  font-size: 26rpx;
  color: #100000;
  width: 100%;
  height: 90rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color:  #ffffff;
  border:0;
  border-radius: 0;
}
.list.button::after{
  display: none;
}
.item{
  flex: 1;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.lable-text{
  font-size: 26rpx;
  color: #100000;
}
.status{
  font-size: 22rpx;
  color: #9B9B9B;
}

