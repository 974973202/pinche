.item{
  display: flex;
  justify-content: space-between;
  margin: 0 30rpx;
  border-bottom: 1px solid #f7f7f7;
}
.label{
  font-size: 28rpx;
  color: #535353;
  padding: 15rpx 10rpx 15px 0;
  width: 130rpx;
}
.cont{
  flex: 1;
  font-size: 28rpx;
  padding: 15rpx 0 15px 0;
  color: #1a1a1a;
}
.picker{
  position: relative;
  display: flex;
  flex: 1;
  align-content: center;
  border-radius: 10rpx;
  border: 1px solid #9B9B9B;
  justify-content: flex-end;
  height: 40rpx;
}
.picker picker{
  position: absolute;
  width: 100%;
  text-align: center;
}
.picker:after{
  content: '';
  display: block;
  width: 10rpx;
  height: 10rpx;
  margin: 10rpx 20rpx 0 20rpx;
  border-top: 1px solid #9B9B9B ;
  border-right: 1px solid #9B9B9B ;
  transform: rotate(135deg);
  -webkit-transform: rotate(135deg)
}
