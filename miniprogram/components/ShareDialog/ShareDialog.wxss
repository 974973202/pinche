.dialog_wrapper {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 100002;
  background: rgba(0, 0, 0, 0.75);
}
.dialog_wrapper .dialog_box {
  position: absolute;
  overflow: hidden;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  width: 76%;
  color: #333333;
  border-radius: 24rpx;
  height: 38%;
  background: #ffffff;
}
.dialog_wrapper .dialogBg {
  position: relative;
  width: 100%;
  height: 50%;
}
.share_text {
  position: relative;
  margin-top: 5rpx;
  width: 100%;
  color: 333333;
  font-size: 39rpx;
  text-align: center;
}
.share_text text {
  font-size: 42rpx;
  color: #00cb00;
}
.footer_btn {
  display: flex;
  position: absolute;
  bottom: 0%;
